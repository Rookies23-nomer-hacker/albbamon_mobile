<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 상단 날짜 & 지원 정보 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/createDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.07.03"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingEnd="8dp"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="| WAITTING"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <!-- 전화 아이콘 -->
        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_phone"
            app:tint="@color/black"
            android:padding="4dp"/>

        <!-- 더보기 아이콘 -->
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/abc_ic_menu_overflow_material"
            app:tint="@color/black"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- 모집 기간 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- 회사명 -->
        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="맨파워그룹"
            android:textSize="14sp"
            android:textColor="@color/black"/>


        <!-- 상태 -->
        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마감 07.07"
            android:textSize="12sp"
            android:textColor="@color/gray"/>
    </LinearLayout>


    <!-- 공고 제목 -->
    <TextView
        android:id="@+id/recruitmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="[1일단기/동마중] 7월7일 시험감독 아르바이트"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop ="4dp"
        android:layout_marginBottom="10dp"/>

    <!-- 시급 -->
    <TextView
        android:id="@+id/wage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="right"
        android:text="시급: 15000원 "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"/>


    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />



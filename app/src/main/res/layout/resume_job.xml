<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ResumeSchoolActivity"
    android:background="@color/white">

    <!-- 뒤로 가기 아이콘 -->
    <ImageView
        android:id="@+id/BackIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경력사항"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/BackIcon"
        app:layout_constraintTop_toTopOf="@id/BackIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 최종학력 제목 -->
    <TextView
        android:id="@+id/tvEducationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경력 구분"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_text"
        android:layout_marginTop="50dp"/>

    <RadioGroup
        android:id="@+id/radioGroupCareer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEducationTitle">

        <RadioButton
            android:id="@+id/radioNewbie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="신입"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioExperienced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:buttonTint="@color/black"
            android:text="경력"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="저장"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FD0200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
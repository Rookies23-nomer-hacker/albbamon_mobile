<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 전체 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- 툴바 (홈, 설정, 닫기 버튼 포함) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:paddingBottom="1dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/btn_home"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:contentDescription="뒤로 가기"
                android:src="@drawable/ic_title_back" />

            <TextView
                android:id="@+id/textView2"
                android:padding="15dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textColor="@android:color/black"
                android:text="채용 정보"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:contentDescription="공유"
                android:src="@drawable/abc_ic_menu_share_mtrl_alpha" />

            <ImageView
                android:id="@+id/btn_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:contentDescription="즐겨찾기"
                android:src="@drawable/ico_favorite_off" />

            <ImageView
                android:id="@+id/btn_redo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:contentDescription="새로고침"
                android:src="@drawable/system_redo" />

        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- 스크롤 가능한 내용 -->

        <!-- 지원하기 버튼을 하단에 고정 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 근무 조건 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근무조건"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시급: 13,666원"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근무기간: 6개월~1년"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근무요일: 주4일 (월, 화, 수, 목)"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근무시간: 09:00~17:00 (휴게시간 60분)"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업직종: 의류·잡화·주얼리매장, 시스템·네트워크·보안"
                    android:textSize="14sp" />

                <!-- 상세 요강 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="상세요강"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_alrimi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모집부분 및 자격요건"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✅ 지원자격:\n- 신입 및 경력 무관\n- MS Office 활용 가능자 우대\n- 정보보안 관련 학과 전공자 우대\n- 성실하고 꼼꼼한 성격의 소유자\n\n📌 업무 내용:\n- 기업 내부 정보보안 관리\n- 보안 시스템 점검 및 문서 정리\n- 사내 네트워크 모니터링 및 보안 관련 업무 지원\n\n💡 지원 방법:\n홈페이지를 통해 지원 가능\n'알바몬에서 보고 전화드렸습니다.'라고 한 후, 광고지점과 근무지역을 말씀하시면 빠른 문의가 가능합니다."
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지원방법"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_checkbox_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홈페이지 지원"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>




            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/apply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/apply_button_color"
            android:text="지원하기"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appcolor"
            app:titleTextColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 마이페이지 제목 (왼쪽 정렬) -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="마이페이지"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- X 버튼 (오른쪽 끝 정렬) -->
                <ImageView
                    android:id="@+id/close_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/baseline_close_24"
                    app:tint="@android:color/white"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- 사용자 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/white">

            <!-- 프로필 이미지 -->
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/round_account_circle_24"
                android:background="@drawable/rounded_shape"
                android:clipToOutline="true"
                android:layout_marginEnd="12dp"/>

            <!-- 사용자 정보 영역 (이름 + 이력서 공개여부) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 이름 + 회원정보 버튼 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="0dp">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="____님"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="120dp"/>

                    <!-- 회원정보 + 설정 아이콘 (클릭 효과 적용) -->
                    <LinearLayout
                        android:id="@+id/user_info_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="5dp"
                        android:background="?attr/selectableItemBackground"> <!-- 클릭 효과 -->

                        <!-- 알람 아이콘 -->
                        <ImageView
                            android:id="@+id/ic_settings"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:layout_marginEnd="4dp"/>

                        <!-- "회원정보" 텍스트 -->
                        <TextView
                            android:id="@+id/user_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회원정보"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 상태메시지 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/resume_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 이력서 비공개 중 "
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:background="@drawable/status_background"
                        android:backgroundTint="@color/light_gray"
                        android:padding="4dp"
                        android:layout_marginEnd="13dp"/>

                    <TextView
                        android:id="@+id/open_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인재정보에 공개하기"
                        android:textSize="13sp"
                        android:textColor="@color/gray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 상태 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:weightSum="4">

            <!-- 이력서 관리 -->
            <LinearLayout
                android:id="@+id/layout_resume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txt_resume_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="@color/appcolor"
                    android:textStyle="bold"/>
                <TextView
                    android:text="이력서 관리"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 세로 구분선 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#DDDDDD"/>

            <!-- 지원현황 -->
            <LinearLayout
                android:id="@+id/layout_apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txt_apply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="@color/appcolor"
                    android:textStyle="bold"/>
                <TextView
                    android:text="지원현황"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 세로 구분선 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#DDDDDD"/>

            <!-- 스크랩 -->
            <LinearLayout
                android:id="@+id/layout_scrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txt_scrap_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="18sp"
                    android:textColor="@color/appcolor"
                    android:textStyle="bold"/>
                <TextView
                    android:text="스크랩"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 세로 구분선 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#DDDDDD"/>

            <!-- 최근본알바 -->
            <LinearLayout
                android:id="@+id/layout_recent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txt_recent_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="18sp"
                    android:textColor="@color/appcolor"
                    android:textStyle="bold"/>
                <TextView
                    android:text="최근본알바"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 추가 정보 -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_boder"
            android:weightSum="3"
            android:layout_marginTop="5dp">

            <!-- 이력서 열람 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:text="이력서 열람"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/txt_resume_view"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- 관심 기업 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:text="관심기업"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_favorite_company"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- 근로계약서 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:text="근로계약서"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 나의소식 -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="5dp">

            <!-- "나의 소식" 텍스트 -->
            <TextView
                android:id="@+id/txt_my_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 소식"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <!-- "푸시알람 설정" 아이콘 + 텍스트 -->
            <LinearLayout
                android:id="@+id/layout_push_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <!-- 알람 아이콘 -->
                <ImageView
                    android:id="@+id/img_push_alarm"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_notification"
                    android:layout_marginEnd="4dp"/>

                <!-- "푸시알람 설정" 텍스트 -->
                <TextView
                    android:id="@+id/txt_push_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="푸시알람 설정"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 타임라인 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp">

            <!-- 첫 번째 알림 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="12dp">

                <!-- 동그란 점 -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/timeline_dot"
                    android:backgroundTint="#F7D649"
                    android:layout_alignParentTop="true"
                    android:elevation="2dp"/>

                <!-- 세로선 (노란색 박스 크기만큼 설정) -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="17dp"
                    android:background="#DDDDDD"/>

                <!-- 노란색 박스 -->
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/status_background"
                    android:backgroundTint="#FFF9D5"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="올리고 기다리면, 면접제의가 뙇!"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="인재정보에 이력서 올리기 >"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>
            <!-- 두 번째 알림 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="12dp">

                <!-- 동그란 점 -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/timeline_dot"
                    android:backgroundTint="#F7D649"
                    android:layout_alignParentTop="true"
                    android:elevation="2dp"/>

                <!-- 세로선 (노란색 박스 크기만큼 설정) -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="17dp"
                    android:background="#DDDDDD"/>

                <!-- 노란색 박스 -->
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/status_background"
                    android:backgroundTint="#FFF9D5"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="이력서 공개기간이 끝나서 비공개 되었어요. 알바 아직 못 구하셨으면 다시 공개하실래요?"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="인재정보에 이력서 올리기 >"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <!-- 세 번째 알림 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="12dp">

                <!-- 동그란 점 -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/timeline_dot"
                    android:backgroundTint="#F7D649"
                    android:layout_alignParentTop="true"
                    android:elevation="2dp"/>

                <!-- 세로선 (노란색 박스 크기만큼 설정) -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="17dp"
                    android:background="#DDDDDD"/>

                <!-- 노란색 박스 -->
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/status_background"
                    android:backgroundTint="#FFF9D5"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="나를 소개하거나 특기를 보여줄 수 있는 동영상을 등록해보세요."
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="인재정보에 이력서 올리기 >"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <!-- 하단 안내 텍스트 -->
            <TextView
                android:id="@+id/txt_recent_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:text="최근 30일 이내 소식만 확인 가능합니다.\n(알람 소식은 10일 이내)"
                android:textSize="16sp"
                android:textColor="#AAAAAA"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>